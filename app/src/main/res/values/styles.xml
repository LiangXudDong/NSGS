<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="home_nav">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/nav_text_select</item>
    </style>
    <style name="user_nav">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">7dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/nav_sousuo</item>
    </style>
    <style name="user_dindan_nav">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/nav_sousuo</item>
        <item name="android:textColor">#A1A1A1</item>
    </style>
</resources>
